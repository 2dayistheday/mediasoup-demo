[data-component='LocalView'] {
	position: relative;
	height: 100%;
	width: 100%;

	> .controls {
		position: absolute;
		z-index: 2
		top: 0;
		left: 0;
		right: 0;
		display: flex;
		flex-direction: row;
		flex-direction: row;
		justify-content: flex-end;
		align-items: center;

		> .button {
			flex: 0 0 auto;
			margin: 4px;
			margin-left: 0;
			width: 32px;
			height: 32px;
			border-radius: 2px;
			background-position: center;
			background-size: 75%;
			background-repeat: no-repeat;
			background-color: rgba(#000, 0.5);
			cursor: pointer;
			transition-duration: 0.15s;

			+desktop() {
				opacity: 0.85;

				&:hover {
					opacity: 1;
				}
			}

			&.disabled {
				pointer-events: none;
				transform: scale(0.75);
				opacity: 0.5;
			}

			&.muted {
				&.on {
					background-image: url('/resources/images/icon_mic_black_muted.svg');
					background-color: rgba(#d42241, 0.9);
				}

				&.off {
					background-image: url('/resources/images/icon_mic_white_muted.svg');
				}
			}

			&.webcam {
				&.on {
					background-image: url('/resources/images/icon_webcam_black_on.svg');
					background-color: rgba(#fff, 0.9);
				}

				&.off {
					background-image: url('/resources/images/icon_webcam_white_on.svg');
				}
			}
		}
	}
}
