[data-component='Peers'] {
	min-height: 100%;
	width: 100%;

	+desktop() {
		width: 100%;
		padding: 20px 0 100px 0;
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: center;
		align-items: center;
		align-content: center;
	}

	+mobile() {
		min-height: 100vh;
		width: 100%;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	> .peer-container {
		overflow: hidden;
		background-color: rgba(#fff, 0.25);

		FadeIn(1000ms);

		+desktop() {
			flex: 0 0 auto;
			height: 306px;
			width: 360px;
			margin: 4px;
			border: 1px solid rgba(#fff, 0.5);
			box-shadow: 0px 5px 12px 2px rgba(#111, 0.75);
		}

		+mobile() {
			flex: 1000 1000 auto;
			height: 100%;
			width: 100%;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;

			// border: 4px solid rgba(#fff, 0.2);
			// border-bottom-width: 0;

			&:last-child {
				// border-bottom-width: 4px;
			}
		}
	}
}
