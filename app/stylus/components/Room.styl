[data-component='Room'] {
	position: relative;
	height: 100%;
	width: 100%;

	AppearFadeIn(300ms);

	> .state {
		position: fixed;
		z-index: 100;
		top: 10px;
		left: 10px;
		width: 124px;
		display: flex;
		flex-direction: row;
		justify-content: flex-start;
		align-items: center;
		border-radius: 25px;
		background-color: rgba(#fff, 0.2);

		> .icon {
			flex: 0 0 auto;
			margin: 5px;
			height: 20px;
			width: 20px;
			border-radius: 100%;

			&.new, &.closed {
				background-color: rgba(#aaa, 0.5);
			}

			&.connecting {
				animation: Room-info-state-connecting .75s infinite linear;
			}

			&.connected {
				background-color: rgba(#30bd18, 0.75);

				+mobile() {
					display: none;
				}
			}
		}

		> .text {
			flex: 100 0 auto;
			user-select: none;
			pointer-events: none;
			text-align: center;
			text-transform: uppercase;
			font-family: 'Roboto';
			font-size: 12px;
			font-weight: 400;
			color: rgba(#fff, 0.75);

			&.connected {
				+mobile() {
					display: none;
				}
			}
		}
	}

	> .room-link-wrapper {
		pointer-events: none;
		position: absolute;
		z-index: 1;
		top: 0;
		left: 0;
		right: 0;
		display: flex;
		flex-direction: row;
		justify-content: center;

		> .room-link {
			width: auto;
			background-color: rgba(#fff, 0.75);
			border-bottom-right-radius: 4px;
			border-bottom-left-radius: 4px;
			box-shadow: 0px 3px 12px 2px rgba(#111, 0.4);

			> a.link {
				display: block;;
				user-select: none;
				pointer-events: auto;
				color: #104758;
				font-weight: 400;
				cursor: pointer;
				text-decoration: none;
				transition-property: opacity;
				transition-duration: 0.25s;
				opacity: 0.8;

				+desktop() {
					padding: 10px 20px;
					font-size: 16px;
				}

				+mobile() {
					padding: 6px 10px;
					font-size: 14px;
				}

				&:hover {
					opacity: 1;
					text-decoration: underline;
				}
			}
		}
	}

	> .me-container {
		position: fixed;
		z-index: 100;
		overflow: hidden;
		box-shadow: 0px 5px 12px 2px rgba(#111, 0.5);

		+desktop() {
			height: 200px;
			width: 235px;
			bottom: 20px;
			left: 20px;
			border: 1px solid rgba(#fff, 0.15);
		}

		+mobile() {
			height: 175px;
			width: 150px;
			bottom: 10px;
			left: 10px;
			border: 1px solid rgba(#fff, 0.25);
		}
	}
}

@keyframes Room-info-state-connecting {
	50% { background-color: rgba(orange, 0.75); }
}
