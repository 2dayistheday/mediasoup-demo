[data-component='Room'] {
	position: relative;
	height: 100%;
	width: 100%;

	FadeIn(1000ms);

	> .state {
		position: fixed;
		z-index: 100;
		top: 10px;
		left: 10px;
		display: flex;
		flex-direction: row;
		justify-content: flex-start;
		align-items: center;
		border-radius: 25px;
		background-color: rgba(#fff, 0.15);

		+desktop() {
			width: 120px;
		}

		> .icon {
			flex: 0 0 auto;
			margin: 5px;
			height: 20px;
			width: 20px;
			border-radius: 100%;

			+desktop() {
				margin-right: 0;
			}

			&.new, &.closed {
				background-color: rgba(#aaa, 0.5);
			}

			&.connecting {
				animation: Room-info-state-connecting .75s infinite linear;
			}

			&.connected {
				background-color: rgba(#30bd18, 0.75);
			}
		}

		> .text {
			flex: 100 0 auto;
			user-select: none;
			pointer-events: none;
			text-align: center;
			text-transform: uppercase;
			font-family: 'Roboto';
			font-size: 12px;
			font-weight: 400;
			color: rgba(#fff, 0.6);

			+mobile() {
				display: none;
			}
		}
	}

	> .me-container {
		position: fixed;
		z-index: 100;
		overflow: hidden;
		border: 1px solid rgba(#fff, 0.5);
		background-color: rgba(#fff, 0.25);
		box-shadow: 0px 5px 12px 2px rgba(#111, 0.75);

		+desktop() {
			height: 200px;
			width: 235px;
			bottom: 20px;
			left: 20px;
		}

		+mobile() {
			height: 175px;
			width: 150px;
			bottom: 10px;
			left: 10px;
		}
	}
}

@keyframes Room-info-state-connecting {
	50% { background-color: rgba(orange, 0.75); }
}
